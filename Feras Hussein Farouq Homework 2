import hashlib
import requests

name = input("Hi there! What's your name?: ")
password = input(f"Hello {name}, Please Enter your password: ")

sha1 = hashlib.sha1(password.encode()).hexdigest().upper()
prefix = sha1[:5]
suffix = sha1[5:]

url = "https://api.pwnedpasswords.com/range/" + prefix
response = requests.get(url)
found = False

for line in response.text.splitlines():
    hash_suffix, count = line.split(":")
    if hash_suffix == suffix:
        found = True
        print("Oh No!, This password is compromised!, please consider changing it.")
        print("this simple program was written by")
        print("Feras Hussein Farouq")
        break

if not found:
    print(f"Good news {name}!, Your password was not found in leaks, it's safe.")
    print("this simple program was written by:")
    print("Feras Hussein Farouq")
